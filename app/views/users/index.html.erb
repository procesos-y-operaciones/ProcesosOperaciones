<%= javascript_include_tag "users" %>

<h2 class="center second"><%= User.model_name.human(:count => 2) %></h2>

<hr />
<%= search_form_for @search, url: users_url, class:"" do |f| %>
  <div class="input-group">
    <%= f.number_field :document_cont, placeholder: "DOCUMENTO", class:"col-sm-3 form-control" %>
    <%= f.text_field :first_name_cont, placeholder: "NOMBRE", class:"col-sm-9 form-control" %>
  </div>
  <div class="col-sm-3 offset-md-9">
    <button type="submit" class="minibtn btn-default">
      <span class="fa">&#xf002;</span>
    </button>
    <%= link_to users_path, class:"minibtn btn-default" do %>
      <span class="fa">&#xf021;</span>
    <% end %>
  </div>
<% end %>
<hr />

<table class="table table-responsive-sm">
  <thead class="first">
    <tr>
      <th><%= sort_link @search, :document, "Documento", {}, :class => 'link' %></th>
      <th><%= sort_link @search, :first_name, "Nombre", {}, :class => 'link' %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="clickable-box">
        <td class='clickable-row' data-href='<%= edit_user_path(user) %>'><%= user.document %></td>
        <td class='clickable-row' data-href='<%= edit_user_path(user) %>'><%= user.first_name %></td>
        <td><%= link_to registration_path(user), method: :delete, data: { confirm: t('general.messages.delete') } do  %><span class="fa fa-trash-o"></span><% end %></td>
      </tr>
    <% end %>
    <tr class="clickable-box">
      <td class='clickable-row' data-href='<%= new_user_path %>'></td>
      <td class='clickable-row' data-href='<%= new_user_path %>'>CREAR √ÅREA</td>
      <td ><%= link_to new_user_path do %><i class="fa fa-plus"></i><% end %></td>
    </tr>
  </tbody>
</table>

<div class="floatRight">
  <%= will_paginate @users, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, class:"pagination-lg" %>
</div>

<p class="first">
  Items <%= @page %>-<%= @users.length + @page.to_i - 1 %> de <%= @search.result.length %>
</p>
