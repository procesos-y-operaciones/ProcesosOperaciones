<%= @evaluation.get_period.state %>|<%= @evaluation.step %>
<br />
<%= case @evaluation.get_period.state
when "FASE 1"
  case @evaluation.step
  when 1
    render "step1"
  when 2
    render "step2"
  else
    render "error"
  end
when "FASE 2"
  case @evaluation.step
  when 3
    render "step3"
  when 4
    render "step4"
  else
    render "error"
  end
when "FASE 3"
  case @evaluation.step
  when 5
    render "step5"
  else
    render "error"
  end
when "FASE 4"
  render "step2"
else
  render "step2"
end %>
