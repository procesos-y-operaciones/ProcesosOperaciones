<!DOCTYPE html>
<html>
  <head>
    <title>ProcesosOperaciones</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag 'fonts' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag 'favicon.ico' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='http://www.google.com/jsapi'></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-sm nav-bg navbar-light fixed-top">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <%= link_to root_path, class:"navbar-brand" do %>
          <%= image_tag("logo.png", height: '70', alt:"pyo_logo") %>
        <% end %>
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to current_user.first_name.upcase + " " + current_user.first_lastname.upcase, edit_user_registration_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "CERRAR SESIÓN", destroy_user_session_path, method: :delete, class:"nav-link" %>
            </li>
            <li class="round-image-50">
              <%= image_tag(current_user.avatar.url(:thumb)) %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container-fluid">
      <% if notice %>
        <div class="alert alert-success alert-dismissable">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
          <strong><%= notice %></strong>
        </div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger alert-dismissable">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
          <strong><%= alert %></strong>
        </div>
      <% end %>
      <div class="row">
        <div class="col-sm-10 offset-md-1 border rounded p-4">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
