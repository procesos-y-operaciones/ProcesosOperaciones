<%= javascript_include_tag "charges" %>

<h2 class="center second">Cargos</h2>

<hr />
<%= search_form_for @search, url: charges_url, class:"" do |f| %>
  <div class="input-group">
    <%= f.text_field :code_cont, placeholder: "CÓDIGO", class:"col-sm-3 form-control" %>
    <%= f.text_field :name_cont, placeholder: "NOMBRE", class:"col-sm-4 form-control" %>
    <%= f.select :area_id_eq, options_from_collection_for_select(Area.get_all_sorted, :id, :name), {include_blank: "AREA"}, {class:"col-sm-5 form-control"} %>
  </div>
  <div class="col-sm-3 offset-md-9">
    <button type="submit" class="minibtn btn-default">
      <span class="fa">&#xf002;</span>
    </button>
    <%= link_to charges_path, class:"minibtn btn-default" do %>
      <span class="fa">&#xf021;</span>
    <% end %>
  </div>
<% end %>
<hr />

<table class="table table-responsive-sm">
  <thead class="first">
    <tr>
      <th><%= sort_link @search, :code, "Código", {}, :class => 'link' %></th>
      <th><%= sort_link @search, :name, "Nombre", {}, :class => 'link' %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @charges.each do |charge| %>
      <tr class="clickable-box">
        <td class='clickable-row' data-href='<%= edit_charge_path(charge) %>'><%= charge.code %></td>
        <td class='clickable-row' data-href='<%= edit_charge_path(charge) %>'><%= charge.name %></td>
        <td><%= link_to charge, method: :delete, data: { confirm: t('general.messages.delete') } do  %><span class="fa fa-trash-o"></span><% end %></td>
      </tr>
    <% end %>
    <tr class="clickable-box">
      <td class='clickable-row' data-href='<%= new_charge_path %>'></td>
      <td class='clickable-row' data-href='<%= new_charge_path %>'>CREAR CARGO</td>
      <td ><%= link_to new_charge_path do %><i class="fa fa-plus"></i><% end %></td>
    </tr>
  </tbody>
</table>

<div class="floatRight">
  <%= will_paginate @charges, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, class:"pagination-lg" %>
</div>

<p class="first">
  Items <%= @page %>-<%= @charges.length + @page.to_i - 1 %> de <%= @search.result.length %>
</p>
