<%= form_with(model: period, local: true) do |form| %>
  <% if period.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(period.errors.count, "error") %> prohibited this period from being saved:</h2>
      <ul>
      <% period.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br />

  <%= form.label :code, "Código", class:'form-label' %>
  <div class="input-group">
    <%= form.text_field :code, required:true, pattern:'[0-9A-Z ]*', title:t('general.messages.mayus_num'), class:'form-control' %>
  </div>

  <%= form.label :name, "Nombre", class:'form-label' %>
  <div class="input-group">
    <%= form.text_field :name, required:true, pattern:'[0-9A-Z ]*', title:t('general.messages.mayus_num'), class:'form-control' %>
  </div>

  <%= form.label :name, "Estado", class:'form-label' %>
  <div class="input-group">
    <%= form.text_field :state, required:true, pattern:'[0-9A-Z ]*', title:t('general.messages.mayus_num'), class:'form-control' %>
  </div>

  <%= form.label :name, "Fecha de Inicio", class:'form-label' %>
  <div class="input-group">
    <%= form.date_field :date_beg, required:true, class:'form-control' %>
  </div>

  <%= form.label :name, "Fecha de Expiración", class:'form-label' %>
  <div class="input-group">
    <%= form.date_field :date_beg, required:true, class:'form-control' %>
  </div>

  <br />

  <div class="actions">
    <%= form.submit t('general.buttons.submit'), class:"btn btn-default floatRight" %>
  </div>
<% end %>
